{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "allowJs": true,

    "moduleResolution": "node",
    "sourceMap": true,

    "baseUrl": "./src",
    "paths": {
      "@routes/*": ["./routes/*"],
      "@models/*": ["./models/*"],
      "@interfaces/*": ["./interfaces/*"],
      "@handlers/*": ["./handlers/*"]
    }
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}