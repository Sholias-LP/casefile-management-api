{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "allowJs": true,

    "moduleResolution": "node",
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}